{
  "name": "chess-tree",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter ./apps/playground dev",
    "preview": "pnpm --filter ./apps/playground preview",
    "build:playground": "pnpm --filter ./apps/playground build",
    "build:packages": "pnpm -r --filter ./packages/** build",
    "build": "pnpm run build:packages && pnpm run build:playground",
    "typecheck:packages": "pnpm -r --filter ./packages/** typecheck",
    "typecheck": "pnpm run typecheck:packages",
    "clean": "pnpm -r --filter ./packages/** clean"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}
